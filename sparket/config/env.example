# Sparket environment example (copy to .env)

# Core
SPARKET_ROLE=validator
SPARKET_CONFIG_FILE=sparket/config/sparket.yaml
# SPARKET_VALIDATOR_CONFIG_FILE=
# SPARKET_MINER_CONFIG_FILE=

# Wallet overrides (optional)
# SPARKET_WALLET__NAME=
# SPARKET_WALLET__HOTKEY=

# Database
SPARKET_DATABASE__HOST=127.0.0.1
SPARKET_DATABASE__PORT=5435
SPARKET_DATABASE__USER=sparket
SPARKET_DATABASE__PASSWORD=change_me
SPARKET_DATABASE__NAME=sparket
# DATABASE_URL=postgresql+asyncpg://user:pass@127.0.0.1:5435/sparket

# Axon
SPARKET_AXON__HOST=0.0.0.0
SPARKET_AXON__PORT=8093

# Optional proxy announced to miners
# SPARKET_API__PROXY_URL=https://validator.example.com/axon

# Providers
SDIO_API_KEY=

# Base miner (enabled by default; set false to disable)
# SPARKET_BASE_MINER__ENABLED=false
